
<%= form_with model: @article, local: true do |form| %>

  <p>
    <%= form.label :date %> <br>
    <%= form.date_select :date, :start_year=>1950 %>
  </p>

  <p>
    <%= form.label :real_estate %><br>
    <%= form.text_field :real_estate, :value=>0%>
  </p>

  <p>
    <%= form.label :savings_accounts %><br>
    <%= form.text_field :savings_accounts, :value=>0%>
  </p>

  <p>
    <%= form.label :checking_accounts %><br>
    <%= form.text_field :checking_accounts, :value=>0%>
  </p>

  <p>
    <%= form.label :retirement_accounts %><br>
    <%= form.text_field :retirement_accounts, :value=>0%>
  </p>

  <p>
    <%= form.label :vehicles %><br>
    <%= form.text_field :vehicles, :value=>0%>
  </p>

  <p>
    <%= form.label :iras %><br>
    <%= form.text_field :iras, :value=>0%>
  </p>

  <p>
    <%= form.label :stocks %><br>
    <%= form.text_field :stocks, :value=>0%>
  </p>

  <p>
    <%= form.label :debt %><br>
    <%= form.text_field :debt, :value=>0%>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
