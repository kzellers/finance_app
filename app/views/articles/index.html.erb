
<h1>Listing Articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Real Estate</th>
    <th>Savings Accounts</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= article.real_estate %></td>
      <td><%= article.savings_accounts %></td>
      <td><%= article.checking_accounts%></td>
      <td><%= article.retirement_accounts%></td>
      <td><%= article.vehicles%></td>
      <td><%= article.iras%></td>
      <td><%= article.stocks%></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article),
               method: :delete,
               data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

